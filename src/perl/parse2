#!/usr/sbin/perl
#
#.... Switch indicies in block, banded matrix solvers
#
while( $l = <STDIN> ) {
    $l =~ s/Ah\((.+?),(.+?),(.+?),(.+?)\)/Ah\($3,$4,$2,$1\)/g;
    $l =~ s/Bh\((.+?),(.+?),(.+?),(.+?)\)/Bh\($3,$4,$2,$1\)/g;
    $l =~ s/Dh\((.+?),(.+?),(.+?),(.+?)\)/Dh\($3,$4,$2,$1\)/g;
    $l =~ s/Ahi\((.+?),(.+?),(.+?),(.+?)\)/Ahi\($3,$4,$2,$1\)/g;
    $l =~ s/Dhi\((.+?),(.+?),(.+?),(.+?)\)/Dhi\($3,$4,$2,$1\)/g;
    $l =~ s/Vh\((.+?),(.+?),(.+?)\)/Vh\($3,$2,$1\)/g;

    $l =~ s/vl\((.+?),(.+?),(.+?)\)/vl\($3,$2,$1\)/g;
#    $l =~ s/rl\((.+?),(.+?),(.+?)\)/rl\($3,$2,$1\)/g;
#    $l =~ s/r\((.+?),(.+?),(.+?)\)/r\($3,$2,$1\)/g;
    $l =~ s/vml\((.+?),(.+?),(.+?)\)/vml\($3,$2,$1\)/g;

    $l =~ s/dtl\((.+?),(.+?)\)/dtl\($2,$1\)/g;
    $l =~ s/spg\((.+?),(.+?)\)/spg\($2,$1\)/g;
    $l =~ s/spg2\((.+?),(.+?)\)/spg2\($2,$1\)/g;
    $l =~ s/buff\((.+?),(.+?)\)/buff\($2,$1\)/g;
    $l =~ s/mat\((.+?),(.+?),(.+?),(.+?),(.+?)\)/mat\($5,$3,$4,$2,$1\)/g;

#    $l =~ s/x\((.+?),(.+?)\)/x\($2,$1\)/g;
#    $l =~ s/y\((.+?),(.+?)\)/y\($2,$1\)/g;

#    $l =~ s/bc\((.+?),(.+?),(.+?),(.+?)\)/bc\($4,$2,$3,$1\)/g;

    print( $l );
}
