#!/usr/sbin/perl
#
#.... Switch indicies in block, banded matrix solvers
#
while( $l = <STDIN> ) {
    $l =~ s/mat\((.+?),(.+?),(.+?),(.+?),(.+?)\)/mat\($1,$2,$3,$5,$4\)/g;
    $l =~ s/rhs\((.+?),(.+?),(.+?)\)/rhs\($1,$3,$2\)/g;

#    $l =~ s/per\((.+?),(.+?),(.+?),(.+?),(.+?)\)/per\($1,$2,$3,$5,$4\)/g;
#    $l =~ s/per2\((.+?),(.+?),(.+?),(.+?),(.+?)\)/per2\($1,$2,$3,$5,$4\)/g;

    print( $l );
}
